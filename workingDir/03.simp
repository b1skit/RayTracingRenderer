# This scene renders a grid of cubes
phong
depth 0 150 0 0 0
ambient 0.25 0.25 0.25
raytrace 0

#noshadows

reflectivity 0

#wire

# Camera
{
	translate 0 25 42
	rotate Y -55
	rotate X -25
	camera  -1 -1 1 1 0.1 500
}

# Light
{
        translate -50 120 -200
        light 10 10 10 0.01 0.02
}

# Ground plane
{
	specular 0.3 8
	scale 2000 1 2000
	obj "unitPlane"
}

# Cubes
{
	translate 0 0 20
	file "cubeGrid"
}
